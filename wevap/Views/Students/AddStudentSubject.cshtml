@model wevap.Models.Student
@{
    ViewBag.Title = "AddStudentSubject";
    List<wevap.Models.QueryModels.SubjectLevel> items = ViewBag.query;
    List<wevap.Models.Level> levels = ViewBag.level;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<h2>Añadir Asignaturas a: @Html.DisplayFor(model => model.NameStudent)</h2>
<hr />
<br />
<div class="container">
    <div class="col-md-2">
        
        <strong>Cursos:</strong>
        <br />
        @foreach (var level in levels)
         {

                <ul class="list-group">

                    <li class="list-group-item">
                        <input type="checkbox" id="chkLevels" name="levels" value="@level.Id_Level" />
                        @level.Stage
                    </li>
                </ul>

         }
    </div>
    <div class="col-md-4">
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>Materia</th>
                    <th>Créditos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                 {
                    <tr>
                     <td>@item.Description</td>
                     <td>@item.Credits</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>

<hr />
<br />
